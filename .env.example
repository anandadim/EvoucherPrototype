# E-Voucher System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Secret (CHANGE THIS!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-here-change-this-to-random-string

# Database Path
DB_PATH=./voucher_downloads.db

# Admin Credentials
# Create admin user via: node utility/create-admin.js
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=secure-password-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Download Rate Limiting
DOWNLOAD_RATE_LIMIT_WINDOW_MS=3600000
DOWNLOAD_RATE_LIMIT_MAX=50

# Phone Rate Limiting
PHONE_RATE_LIMIT_WINDOW_MS=86400000
PHONE_RATE_LIMIT_MAX=1

# Security
BCRYPT_ROUNDS=10

# Optional: External Services
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
